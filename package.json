{
  "name": "woi-presentation",
  "version": "1.0.0",
  "description": "",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --config jest.config.js script.test.js",
    "test:api": "jest --config jest.api.config.js",
    "test:e2e": "pytest tests/ -v",
    "test:e2e:pw": "playwright test",
    "test:e2e:smoke": "pytest tests/ -v -m smoke",
    "test:e2e:ui": "pytest tests/ -v -m ui",
    "test:e2e:api": "pytest tests/ -v -m api",
    "test:all": "npm run test:unit && npm run test:api && npm run test:e2e",
    "test:all:allure": "node run-all-tests.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:generate:history": "allure generate allure-results -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:clean": "node scripts/clean-allure.js",
    "allure:clean:keep-history": "node scripts/clean-allure.js --keep-history",
    "test:unit:trends": "npm run allure:clean:keep-history && npm run test:unit && npm run allure:generate:history",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "start": "node server.js",
    "dev": "node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "allure-commandline": "^2.36.0",
    "allure-jest": "^3.4.3",
    "allure-playwright": "^3.4.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "supertest": "^7.1.4",
    "uuid": "^13.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1"
  }
}
